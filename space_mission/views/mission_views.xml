<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mission_view_form" model="ir.ui.view">
        <field name="name">mission.view.form</field>
        <field name="model">space_mission.mission</field>
        <field name="arch" type="xml">
            <form string="Mission View">
                <header></header>
                <sheet>
                    <h1><field name="name"/></h1>
                    <h3><field name="mission_number"/></h3>
                    <group>
                        <group>
                            <field name="launch_date" 
                                   widget="daterange" 
                                   options="{'related_end_date':'return_date'}"/>
                            <field name="return_date"
                                   widget="daterange" 
                                   options="{'related_start_date':'launch_date'}"/>
                        </group>
                        <group>
                            <separator string="Crew"/>
                            <field name="crew_ids"/>
                        </group>
                        <group>
                            <separator string="Spaceship"/>
                            <field name="spaceship_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="mission_view_list" model="ir.ui.view">
        <field name="name">mission.view.list</field>
        <field name="model">space_mission.mission</field>
        <field name="arch" type="xml">
            <tree string="Mission List">
                <field name="name"/>
                <field name="mission_number"/>
                <field name="spaceship_id"/>
                <field name="launch_date"/>
                <field name="return_date"/>
            </tree>
        </field>
    </record>

    <record id="mission_view_search" model="ir.ui.view">
        <field name="name">mission.view.search</field>
        <field name="model">space_mission.mission</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="mission_number"/>
                <field name="spaceship_id"/>
                <field name="launch_date"/>
            </search>
        </field>
    </record>
</odoo>